FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      extrudeProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

constructFrom patch;
sourceCase "$FOAM_CASE";  //Use "." to extrude the current case in situ

sourcePatches (back);   
exposedPatchName front;  //Note that here no brackets are needed
 
extrudeModel  plane;
thickness     0.001;

flipNormals false;
mergeFaces false;